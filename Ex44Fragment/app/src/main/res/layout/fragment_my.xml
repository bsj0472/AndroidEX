<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF00">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView inside MyFragment"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="change text"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="change text MainActivity"
        android:onClick="clickBtn2"/>
    <!-- fragment.java에서는 onClick속성 발동 메소드가 없음.. 그래서 일반적으로 리스너를 이용   -->
    <!-- 그럼에도 onClick속성을 부여하면 Fragment를 보여주는 액티비티에서 발동함   -->

</LinearLayout>